<div id="title">
  <div class="actions">
    <%= link_to "Cancel", "#", class: "btn btn-medium pull-right" %>
    <%= link_to "Delete User", "#", class: "btn btn-danger btn-medium pull-right", data: { confirm: "Are you sure?", method: "delete" } %>
  </div>
  <h1>Editing User</h1>
</div>

<div class="form-panel">

  <%= form_tag "" do %>

    <div class="span4">
      <%= label_tag :first_name %>
      <%= text_field_tag :first_name %>
    </div>

    <div class="span4">
      <%= label_tag :last_name %>
      <%= text_field_tag :first_name %>
    </div>

    <div class="span4">
      <%= label_tag :email %>
      <%= text_field_tag :email %>
    </div>

    <div class="span4">
      <%= label_tag :password %>
      <%= text_field_tag :password %>
    </div>

    <div class="span8">
      <%= label_tag :bio %>
      <%= text_area_tag :bio %>
    </div>

    <div style="clear:both;"></div>

    <div class="form-actions">
      <button type="submit" class="btn btn-primary">Save changes</button>
      <button type="button" class="btn">Cancel</button>
    </div>

  <% end %>

</div>
